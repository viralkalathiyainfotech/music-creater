<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeColor"
    tools:context=".UI.Activity.SignInActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_above="@+id/IcRegisterNow"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".UI.LoginActivity">

            <LinearLayout
                android:id="@+id/llTopLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:includeFontPadding="false"
                        android:text="Sign in"
                        android:textAlignment="textStart"
                        android:textColor="@color/toolbar"
                        android:textSize="@dimen/_26ssp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/inter_regular"
                        android:includeFontPadding="false"
                        android:text="Welcome back! Please sign in."
                        android:textAlignment="textStart"
                        android:textColor="@color/themeLightText"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="visible" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:text="Email"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/edit_text_bg"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/editEmail"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_44sdp"
                                android:autofillHints="emailAddress"
                                android:background="@drawable/edit_text_bg"
                                android:backgroundTint="@android:color/transparent"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center_vertical"
                                android:hint="Email"
                                android:inputType="textEmailAddress"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:textColor="@color/themeLightText"
                                android:textColorHint="@color/themeLightText"
                                android:textSize="@dimen/_12ssp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:text="Password"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14ssp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/edit_text_bg"
                            android:paddingHorizontal="@dimen/_10sdp">

                            <EditText
                                android:id="@+id/editPassword"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_44sdp"
                                android:autofillHints="password"
                                android:background="@null"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center_vertical"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:textColor="@color/themeLightText"
                                android:textColorHint="@color/themeLightText"
                                android:textSize="@dimen/_12ssp" />

                            <ImageView
                                android:id="@+id/icPassword"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_eye_hide" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/checkBox"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="10dp" />

                            <TextView
                                android:id="@+id/textRemember"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_regular"
                                android:gravity="end"
                                android:text="Remember Me"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_13ssp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/ForgotPassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:text="Forgot Password ?"
                            android:textColor="@color/red"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/icLoginBtn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_44sdp"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:background="@drawable/ic_button"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ProgressBar
                            android:id="@+id/progressBar"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:indeterminateTint="@color/white"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txtLogin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="Login"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp" />
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_30sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/icOr"
                        android:background="#E1E1E1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/icOr"
                        android:background="#E1E1E1" />

                    <TextView
                        android:id="@+id/icOr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:fontFamily="@font/inter_semibold"
                        android:includeFontPadding="false"
                        android:text="OR"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/LLGoogle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_48sdp"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:layout_weight="1"
                        android:background="@drawable/ic_strock_bg"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/ivGoogle"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_google" />

                        <TextView
                            android:id="@+id/tvGoogle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_toRightOf="@+id/ivGoogle"
                            android:fontFamily="@font/inter_medium"
                            android:text="Google"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LLFb"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_48sdp"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_weight="1"
                        android:background="@drawable/ic_strock_bg"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/icFacebook"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerInParent="true"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_facebook" />

                        <TextView
                            android:id="@+id/tvFb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_toRightOf="@+id/icFacebook"
                            android:fontFamily="@font/inter_medium"
                            android:text="Facebook"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13ssp" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/IcRegisterNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_14ssp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/inter_regular"
                android:includeFontPadding="false"
                android:text="Didnâ€™t have any account?"
                android:textColor="#A1A1A1"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/inter_medium"
                android:includeFontPadding="false"
                android:text="Create Account"
                android:textColor="@color/toolbar"
                android:textSize="@dimen/_13ssp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>