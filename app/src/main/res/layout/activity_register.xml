<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeColor"
    tools:context=".UI.Activity.RegisterActivity">

    <include
        android:id="@+id/icToolbar"
        layout="@layout/all_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:layout_above="@id/IcSigninNow"
        android:layout_below="@+id/icToolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:includeFontPadding="false"
                        android:text="Create Account"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_26ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:includeFontPadding="false"
                        android:text="Register your account easily enter your email below"
                        android:textColor="@color/themeLightText"
                        android:textSize="@dimen/_14ssp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvFirstName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:includeFontPadding="false"
                                android:text="First Name"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp" />

                            <EditText
                                android:id="@+id/editUsername"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:autofillHints="name"
                                android:background="@drawable/edit_text_bg"
                                android:fontFamily="@font/inter_medium"
                                android:hint="First Name"
                                android:inputType="textEmailAddress"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:textColor="@color/themeLightText"
                                android:textColorHint="@color/themeLightText"
                                android:textSize="@dimen/_12ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvLastName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="start"
                                android:includeFontPadding="false"
                                android:text="Last Name"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp" />

                            <EditText
                                android:id="@+id/editLatName"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/edit_text_bg"
                                android:fontFamily="@font/inter_medium"
                                android:hint="Last Name"
                                android:inputType="textEmailAddress"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:textColor="@color/themeLightText"
                                android:textColorHint="@color/themeLightText"
                                android:textSize="@dimen/_12ssp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:text="Email"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14ssp" />

                        <EditText
                            android:id="@+id/editEmail"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:autofillHints="emailAddress"
                            android:background="@drawable/edit_text_bg"
                            android:fontFamily="@font/inter_medium"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:textColor="@color/themeLightText"
                            android:textColorHint="@color/themeLightText"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:text="Password"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14ssp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/edit_text_bg"
                            android:paddingHorizontal="@dimen/_10sdp">

                            <EditText
                                android:id="@+id/editPassword"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:autofillHints="password"
                                android:background="@null"
                                android:fontFamily="@font/inter_medium"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:textColor="@color/themeLightText"
                                android:textColorHint="@color/themeLightText"
                                android:textSize="@dimen/_12ssp" />

                            <ImageView
                                android:id="@+id/icPassword"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_eye_hide" />

                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/icRegisterBtn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_48sdp"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:background="@drawable/ic_button"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="Create Account"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/icOr"
                            android:background="@drawable/view_left" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/icOr"
                            android:background="@drawable/view_right" />

                        <TextView
                            android:id="@+id/icOr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:fontFamily="@font/inter_semibold"
                            android:includeFontPadding="false"
                            android:text="OR"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/LLGoogle"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_48sdp"
                            android:layout_marginEnd="@dimen/_7sdp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_strock_bg"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/ivGoogle"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_google" />

                            <TextView
                                android:id="@+id/tvGoogle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_toRightOf="@+id/ivGoogle"
                                android:fontFamily="@font/inter_medium"
                                android:text="Google"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_13ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/LLFb"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_48sdp"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_strock_bg"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/icFacebook"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_centerInParent="true"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_facebook" />

                            <TextView
                                android:id="@+id/tvFb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_toRightOf="@+id/icFacebook"
                                android:fontFamily="@font/inter_medium"
                                android:text="Facebook"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_13ssp" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/IcSigninNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_14ssp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/inter_regular"
                android:includeFontPadding="false"
                android:text="Already have any account?"
                android:textColor="#A1A1A1"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/inter_medium"
                android:includeFontPadding="false"
                android:text="Sign in"
                android:textColor="@color/toolbar"
                android:textSize="@dimen/_13ssp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>